<% provide(:title, 'Edit baby') %>
<h1 align="center">Update the baby</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @baby do |f| %>
      <%= f.label 'First Name' %>
      <%= f.text_field :first_name, class: 'form-control' %>
      <br>

      <%= f.label 'Last Name' %>
      <%= f.text_field :last_name, class: 'form-control' %>
      <br>

      <p>
        <%= f.label 'Metric?' %> <br>
        Are the following units for height and weight in Metric System (e.g. meters, grams, Celcius)?
        <%= f.check_box :metric, class: 'form-control' %>
      </p> 

      <%= f.label 'Height' %>
      <p> Please keep height in either cm or inches. Not feet. Follow the metric system you have stated above! </p>
      <%= f.number_field :height, class: 'form-control' %>
      <br>

      <%= f.label 'Weight' %>
      <p> Please keep weight in either kg or lbs. Follow the metric system you have stated above! </p>
      <%= f.number_field :weight, class: 'form-control' %>
      <br>

      <%= f.label 'Temperature' %>
      <p> Please keep temperature in either Fahrenheit or Celcius. Follow the metric system you have stated above! </p>
      <%= f.number_field :temperature, class: 'form-control' %>
      <br>

      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>