<% provide(:title, 'Sign up') %>
<h1 align="center">Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @baby.errors.any? %>
      <div id = "error_explanation">
        <p class = "alert alert-error">
          The form contains <%= pluralize(@baby.errors.count, "error") %>.
        </p>
        <ul>
          <% @baby.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_for :baby, url: babies_path do |f| %>
      <%= f.label 'First Name' %>
      <%= f.text_field :first_name, class: 'form-control' %>
      <br>

      <%= f.label 'Last Name' %>
      <%= f.text_field :last_name, class: 'form-control' %>
      <br>

      <p>
        <%= f.label 'Metric?' %> <br>
        Are the following units for height and weight in Metric System (e.g. meters, grams, Celcius)?
        <%= f.check_box :metric, class: 'form-control' %>
      </p> 

      <%= f.label 'Height' %>
      <p> Please keep height in either cm or inches. Not feet. Follow the metric system you have stated above! </p>
      <%= f.number_field :height, class: 'form-control' %>
      <br>

      <%= f.label 'Weight' %>
      <p> Please keep weight in either kg or lbs. Follow the metric system you have stated above! </p>
      <%= f.number_field :weight, class: 'form-control' %>
      <br>

      <%= f.label 'Temperature' %>
      <p> Please keep temperature in either Fahrenheit or Celcius. Follow the metric system you have stated above! </p>
      <%= f.number_field :temperature, class: 'form-control' %>
      <br>

      <%= f.submit "Create Baby", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>